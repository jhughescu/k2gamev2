<div class="leaderboard-runnersup" id="{{lbPlace}}">
    <h3>{{lbPlace}}</h3>
    <div class="runnersup-info">
        <div class='imgstack'>
            {{#if finished}}{{else}}
            <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <clipPath id="circle-clip">
                        <circle cx="50" cy="50" r="40" />
                    </clipPath>
                </defs>

                <!-- White circle -->
                <circle cx="50" cy="50" r="40" fill="none" />

                <!-- Red line at 45Â° to vertical, clipped to circle -->
                <g clip-path="url(#circle-clip)">
                    <line x1="20" y1="80" x2="80" y2="20" stroke="red" stroke-width="5" />
                </g>
            </svg>
            {{/if}}
            <img id="2nd-team-flag" src="assets/profiles/profileimages_{{filename}}.png" />
        </div>
        <div>
            <h3>{{name}}</h3>
            <p>Profile {{OPTION}}</p>
        </div>

        <p>{{#if finished}}{{lbTime}}{{/if}}</p>

    </div>
</div>
