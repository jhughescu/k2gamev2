<style>

	body{
		background-image: url("assets/K2-leaderboard.png");
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		padding: 30px;
		height: 100vh;
		}

	.leaderboard-container{
	display: grid;
	width: 100%;
	height: auto;
	grid-template-columns: auto;
	color: white;
	align-content: start;
	grid-gap: 20px;
	}

	.leaderboard-first{
		display: grid;
	}

	.winner-box{
		display: grid;
		align-items: center;
	}

	.winner-box img{
		grid-row: 1;
		grid-column: 1;
		justify-self: center;
	}

	.winner-box img:first-of-type{
		width: 130px;
		border-radius: 5px;
		background-color: white;
		border-radius: 50%;
	}

	.winner-box img:nth-of-type(2){
		width: 240px;
		filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.40))
	}


	.leaderboard-runnersup{
		display: flex;
		align-items: center;
	}



	.leaderboard-runnersupOLD img {
		width: 80px;
		height: 80px;
		background-color: white;
		border-radius: 50%;
	}
	.leaderboard-runnersup .imgstack {
		position: relative;
        width: 80px;
		height: 80px;
/*		background-color: white;*/
		border-radius: 50%;
	}
    .imgstack img,
    .imgstack svg {
/*        display: none;*/
        position: absolute;
/*        margin: 30px;*/
        top: 0px;
        left: 0px;
        width: 80px;
		height: 80px;
		border-radius: 50%;
    }
    .imgstack img {
        background-color: white;
        z-index: 0;
    }
    .imgstack svg {
        z-index: 1;
    }

	.leaderboard-runnersup .runnersup-info{
		display: flex;
		flex-direction: row;
		background-color: rgba(0,153,196,0.80);
		box-shadow: 3px 3px 5px 0px rgba(0,0,0,0.30);
		width: 100%;
		justify-content: space-between;
		align-items: center;
		border-radius: 50px 15px 15px 50px;
		padding: 0px 20px 0px 0px;
		margin-left: 10px;
		text-align: left;
	}

	.leaderboard-first h3{
		font-size: 1.4em;
	}

	.leaderboard-first h3, .runnersup-info div h3{
		margin-bottom: 0;
	}

	.leaderboard-first p, .runnersup-info div p{
		margin-top: 5px;
	}

@media (min-width: 800px){
		.leaderboard-container{
		max-width: 900px;
		margin: 0 auto;
	}

		.leaderboard-first{
			grid-column: 1 / span2;
		}


		.leaderboard-runnersup:nth-of-type(1){
			order: 0;
		}

		.leaderboard-runnersup:nth-of-type(2){
			order: 1;
		}

	.leaderboard-runnersup:nth-of-type(3){
			order: 3;
		}

	.leaderboard-runnersup:nth-of-type(4){
			order: 5;
		}

	.leaderboard-runnersup:nth-of-type(5){
			order: 2;
		}

	.leaderboard-runnersup:nth-of-type(6){
			order: 4;
		}

	.leaderboard-runnersup:nth-of-type(7){
			order:6;
		}


	}


</style>
<div class="center">
	<div class="nav-header-container">
		<div class="back-btn-title-bar">
			<h1>Leaderboard</h1>
		</div>
	</div>

		<!-- Main Content -->

	<div class="leaderboard-container">
        {{#each profiles}}
	    {{#if lbFirst}}
	    {{> climber-leaderboard-first}}
		{{else}}
		{{> climber-leaderboard-runnersup}}
        {{/if}}
		{{/each}}


	</div>
	<a class="k2-modal-btn-link" style="max-width: 300px; margin-top: 50px;" href="#home">Done</a>

</div>
